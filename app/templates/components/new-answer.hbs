{{#if addNewAnswer}}
  <h2>Here are the Answers to the question: </h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Answer by: </label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="reply">Here's the answer: </label>
        {{textarea row=5 value=reply cols="80" rows="6" maxlength="500"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'showAnswerForm'}}> Answer </button>
{{/if}}
